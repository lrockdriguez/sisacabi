<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="sisddeq-persistencia"
		transaction-type="RESOURCE_LOCAL">
		<description>
		
</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.equidad.sisddeq.entidades.Estado</class>
		<class>com.equidad.sisddeq.entidades.Localidade</class>
		<class>com.equidad.sisddeq.entidades.Municipio</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCEstadoActividad</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCMenu</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCOrganizacion</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCPoblacion</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCProposito</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCProyecto</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCRol</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCSector</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCTema</class>
		<class>com.equidad.sisddeq.entidades.SisddeqCTipoBitacora</class>
		<class>com.equidad.sisddeq.entidades.SisddeqTBitacora</class>
		<class>com.equidad.sisddeq.entidades.SisddeqTOrigenAsistencia</class>
		<class>com.equidad.sisddeq.entidades.SisddeqTUsuario</class>
		<class>com.equidad.sisddeq.entidades.SisddeqTUsuarioPK</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydb" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="admin" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="create" /> -->
		</properties>


	</persistence-unit>

</persistence> 